<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        Width="600" Height="400"
        x:Class="SnmpSimpleClientProject.MainWindow"
        Title="SnmpSimpleClientProject">
  <Grid RowDefinitions="Auto,*,Auto">

    <!-- Title bar-->
    <Grid Grid.Row="0" Background="Orange" Height="40" ColumnDefinitions="*">
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2">
        <Label FontWeight="Black" >SNMP</Label>
        <Label>Simple Client</Label>
      </StackPanel>
    </Grid>

    <!-- Main area -->
    <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Background="#888">
      <!-- Volume Bar -->
      <Rectangle Grid.Column="0" Fill="Purple" Width="140"></Rectangle>
      <!-- Graph -->
      <Rectangle Grid.Column="1" Fill="Black"></Rectangle>
    </Grid>

    <!-- Bottom bar-->
    <Grid  Grid.Row="2" Margin="8"  ColumnDefinitions="Auto,Auto,*,Auto,Auto,Auto,Auto,Auto" Background="#FFF">
      <Label Grid.Column="0" Margin="0,0,8,0">V2</Label>
      <Label Grid.Column="1">Timeout: 60000 ms</Label>
      <Label Grid.Column="6">Connected</Label>
    </Grid>
  </Grid>
</Window>
